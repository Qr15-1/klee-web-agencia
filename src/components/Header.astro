---
// src/components/Header.astro
import { Icon } from 'astro-icon/components';
---
<header class="py-6 relative z-50">
    <div class="container mx-auto px-6 font-sans">
        <nav class="flex justify-between items-center">
            
            <a href="/">
                <!-- 
                    ========================================
                    CAMBIOS EN EL LOGO:
                    1. Ruta corregida: '/imagenes/LOGO.png'
                    2. Tamaño aumentado: 'h-12' (puedes probar con h-10 o h-14 si quieres)
                    ========================================
                -->
                <img src="/imagenes/LOGO.png" alt="Klee Logo" class="h-15 w-auto filter invert brightness-0">
            </a>

            <!-- MENÚ DE ESCRITORIO -->
            <div class="hidden md:flex items-center gap-10">
                <a href="/" class="text-gray-300 hover:text-white transition-colors text-xl font-medium">Home</a>
                <a href="/tours" class="text-gray-300 hover:text-white transition-colors text-xl font-medium">Tours</a>
                <a href="/blog" class="text-gray-300 hover:text-white transition-colors text-xl font-medium">Blog</a>
                <a href="/about" class="text-gray-300 hover:text-white transition-colors text-xl font-medium">About</a>
            </div>

            <a href="/contact" class="hidden md:inline-block boton-amarillo">
                EMPIEZA HOY
            </a>

            <!-- BOTÓN DE HAMBURGUESA -->
            <button id="menu-btn" class="md:hidden focus:outline-none">
                <Icon name="mdi:menu" class="w-8 h-8 text-white" />
            </button>
        </nav>
    </div>

    <!-- MENÚ DESPLEGABLE MÓVIL -->
    <div id="menu" class="hidden md:hidden absolute top-full left-0 w-full bg-gray-900 bg-opacity-95 backdrop-blur-sm">
        <div class="flex flex-col items-center py-8 gap-6">
            <a href="/" class="text-white text-2xl">Home</a>
            <a href="/tours" class="text-white text-2xl">Tours</a>
            <a href="/blog" class="text-white text-2xl">Blog</a>
            <a href="/about" class="text-white text-2xl">About</a>
            <a href="/contact" class="mt-4 bg-klee-yellow text-black font-bold py-3 px-8 rounded-full text-sm tracking-wider">
                EMPIEZA HOY
            </a>
        </div>
    </div>
</header>

<script>
    const btn = document.getElementById('menu-btn');
    const menu = document.getElementById('menu');

    btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
    });
</script>

<style>
    .boton-amarillo {
        @apply bg-transparent border-2 font-bold py-3 px-8 rounded-full text-sm tracking-wider transition-colors duration-300;
        border-color: #FBC943;
        color: #FBC943;
        text-decoration: none;
    }
    .boton-amarillo:hover {
        background-color: #FBC943;
        color: black;
    }
</style>