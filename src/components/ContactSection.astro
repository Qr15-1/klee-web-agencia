---
// src/components/ContactSection.astro

// 1. Recibimos la función 't'
const { t } = Astro.props;
---

<div class="container mx-auto px-6 mt-16">
  <section class="relative bg-slate-900 rounded-3xl p-10 sm:p-16 overflow-hidden">
      
    <div aria-hidden="true" class="absolute inset-0 -top-16 -left-16">
      <div class="absolute top-0 left-0 w-[30rem] h-[30rem] bg-red-500/20 blur-3xl rounded-full"></div>
    </div>
    
    <div class="relative">
      <div class="text-center mb-16">
        <h2 class="font-bebas text-5xl font-bold tracking-tight text-white sm:text-6xl uppercase">
          {t('contactSection.title')} {/* <-- Título principal traducido */}
        </h2>
        <div class="mt-4 h-1 w-24 bg-amber-400 mx-auto rounded-full"></div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        <form action="https://formspree.io/f/TU_ID_DE_FORMSPREE" method="POST" class="space-y-8">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-400 mb-2">{t('contactSection.form.nameLabel')}</label>
            <input 
              type="text" 
              name="name" 
              id="name" 
              placeholder={t('contactSection.form.namePlaceholder')} {/* <-- Placeholder traducido */}
              required 
              class="w-full bg-gray-800 border border-gray-700 rounded-lg focus:border-amber-400 focus:ring focus:ring-amber-400 focus:ring-opacity-50 transition-all duration-300 p-3 text-white">
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-400 mb-2">{t('contactSection.form.emailLabel')}</label>
            <input 
              type="email" 
              name="email" 
              id="email" 
              placeholder={t('contactSection.form.emailPlaceholder')} {/* <-- Placeholder traducido */}
              required 
              class="w-full bg-gray-800 border border-gray-700 rounded-lg focus:border-amber-400 focus:ring focus:ring-amber-400 focus:ring-opacity-50 transition-all duration-300 p-3 text-white">
          </div>
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-400 mb-2">{t('contactSection.form.subjectLabel')}</label>
            <input 
              type="text" 
              name="subject" 
              id="subject" 
              placeholder={t('contactSection.form.subjectPlaceholder')} {/* <-- Placeholder traducido */}
              required 
              class="w-full bg-gray-800 border border-gray-700 rounded-lg focus:border-amber-400 focus:ring focus:ring-amber-400 focus:ring-opacity-50 transition-all duration-300 p-3 text-white">
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-400 mb-2">{t('contactSection.form.messageLabel')}</label>
            <textarea 
              name="message" 
              id="message" 
              rows="4" 
              placeholder={t('contactSection.form.messagePlaceholder')} {/* <-- Placeholder traducido */}
              required 
              class="w-full bg-gray-800 border border-gray-700 rounded-lg focus:border-amber-400 focus:ring focus:ring-amber-400 focus:ring-opacity-50 transition-all duration-300 p-3 text-white"></textarea>
          </div>
          <button type="submit" class="w-full sm:w-auto bg-amber-400 text-gray-900 font-bold py-3 px-8 hover:bg-amber-300 transition-colors duration-300 uppercase tracking-wider rounded-lg">
            {t('contactSection.form.button')} {/* <-- Botón de formulario traducido */}
          </button>
        </form>

        <div class="text-gray-300 pt-2">
          <h3 class="font-bold text-xl text-white uppercase tracking-widest">{t('contactSection.info.title')}</h3> {/* <-- Título "Hablemos" traducido */}
          <p class="mt-4">
            {t('contactSection.info.p1')} {/* <-- Primer párrafo traducido */}
          </p>
          <p class="mt-4">
            {t('contactSection.info.p2')} {/* <-- Segundo párrafo traducido */}
          </p>
          <div class="mt-8 border-t border-gray-700 pt-6">
            <p class="font-bold text-white">{t('contactSection.info.contactTitle')}</p> {/* <-- Título de contacto traducido */}
            <a href="mailto:info@kleeagencia.com" class="mt-2 block text-amber-400 hover:text-amber-300 transition-colors">
              info@kleeagencia.com
            </a>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>