---
import TypingTitle from './TypingTitle.astro';

// 1. Recibimos la función 't' que nos llega desde la página
const { t } = Astro.props;
---

<section class="container mx-auto px-4 mt-3">
    <div 
        class="
            relative 
            bg-gradient-to-br from-red-500/20 via-blue-900/60 to-blue-500/20
            rounded-3xl min-h-[500px] flex flex-col justify-center items-center 
            text-center p-8 overflow-hidden
        "
    >
        <div class="absolute inset-0 bg-black/10"></div>

        <div class="relative z-10 flex flex-col items-center">
            {/* 2. Le pasamos la función 't' al siguiente componente en la cadena */}
            <TypingTitle t={t} />

            {/* 3. Usamos 't' para mostrar el subtítulo traducido */}
            <p class="mt-4 text-xl text-gray-200 font-sans">
               {t('hero.subtitle')}
            </p>
        </div>
    </div>
</section>