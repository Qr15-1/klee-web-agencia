---
// src/components/FloatingSocials.astro
// No se necesita código de servidor para este componente
---

<!-- Contenedor principal que se posiciona de forma fija en la pantalla -->
<div class="fixed bottom-5 right-5 z-50 flex flex-col items-end gap-3">
  
  <!-- Contenedor de los iconos sociales (el que se ocultará/mostrará) -->
  <div id="social-icons" class="flex flex-col gap-3">
    <!-- Enlace de Instagram -->
    <a 
      href="https://instagram.com/tu-usuario" 
      target="_blank" 
      rel="noopener noreferrer"
      aria-label="Visita nuestro Instagram"
      class="flex items-center justify-center w-14 h-14 bg-purple-400 rounded-full shadow-lg hover:bg-purple-500 transition-colors duration-300"
    >
      <!-- Icono SVG de Instagram -->
      <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-white" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <rect x="4" y="4" width="16" height="16" rx="4"></rect>
        <circle cx="12" cy="12" r="3"></circle>
        <line x1="16.5" y1="7.5" x2="16.5" y2="7.501"></line>
      </svg>
    </a>

    <!-- Enlace de WhatsApp -->
    <!-- Recuerda reemplazar el número de teléfono -->
    <a 
      href="https://wa.me/1234567890" 
      target="_blank" 
      rel="noopener noreferrer"
      aria-label="Contáctanos por WhatsApp"
      class="flex items-center justify-center w-14 h-14 bg-green-500 rounded-full shadow-lg hover:bg-green-600 transition-colors duration-300"
    >
      <!-- Icono SVG de WhatsApp -->
      <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-white" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path>
        <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"></path>
      </svg>
    </a>
  </div>

  <!-- Botón para mostrar/ocultar los iconos -->
  <button id="toggle-button" aria-label="Mostrar/ocultar redes sociales" class="flex items-center justify-center w-14 h-14 bg-gray-800 text-white rounded-full shadow-lg hover:bg-gray-900">
    <!-- Icono de Menos (-) por defecto -->
    <span id="minus-icon">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <line x1="5" y1="12" x2="19" y2="12" />
      </svg>
    </span>
    <!-- Icono de Más (+) oculto por defecto -->
    <span id="plus-icon" class="hidden">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <line x1="12" y1="5" x2="12" y2="19" />
        <line x1="5" y1="12" x2="19" y2="12" />
      </svg>
    </span>
  </button>
</div>

<script>
  // Obtenemos los elementos del DOM
  const toggleButton = document.getElementById('toggle-button');
  const socialIcons = document.getElementById('social-icons');
  const plusIcon = document.getElementById('plus-icon');
  const minusIcon = document.getElementById('minus-icon');

  // Añadimos el evento de click al botón
  toggleButton.addEventListener('click', () => {
    // Alternamos la clase 'hidden' en el contenedor de los iconos
    socialIcons.classList.toggle('hidden');

    // Alternamos la visibilidad de los iconos '+' y '-'
    plusIcon.classList.toggle('hidden');
    minusIcon.classList.toggle('hidden');
  });
</script>