];
---

<!-- 
  CAMBIO CLAVE: He quitado el contenedor redondeado. 
  Ahora la sección ocupa todo el ancho del layout principal.
-->
<section id="clients" class="py-20 sm:py-24 bg-gray-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    
    <!-- Título de la Sección -->
    <div class="text-center">
      <h2 class="font-bebas text-3xl font-bold tracking-widest text-white sm:text-4xl uppercase">
        Clientes que confían en nosotros
      </h2>
      <div class="mt-4 h-1 w-24 bg-amber-400 mx-auto rounded-full"></div>
    </div>

    <!-- Grid de Logos -->
    <div class="mt-16 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-y-12 gap-x-8">
      {clients.map(client => (
        <div class="flex items-center justify-center">
          <img
            src={client.logoSrc}
            alt={`Logo de ${client.name}`}
            class="max-h-12 w-auto filter grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
          />
        </div>
      ))}
    </div>

  </div>
</section>