// Añade aquí cada logo que quieras mostrar.
const clients = [
  { logoSrc: '/imagenes/logos/logo1.svg', name: 'Renta Garantizada' },
  { logoSrc: '/imagenes/logos/logo2.svg', name: 'Clicars' },
  { logoSrc: '/imagenes/logos/logo3.svg', name: 'Museo de Cera' },
  { logoSrc: '/imagenes/logos/logo4.svg', name: 'Vericat' },
  { logoSrc: '/imagenes/logos/logo5.svg', name: 'Real Sitio' },
  { logoSrc: '/imagenes/logos/logo6.svg', name: 'Kia' },
  { logoSrc: '/imagenes/logos/logo7.svg', name: 'Qilu Pharma' },
  { logoSrc: '/imagenes/logos/logo8.svg', name: 'Inmho' },
  { logoSrc: '/imagenes/logos/logo9.svg', name: 'Segopi' },
  { logoSrc: '/imagenes/logos/logo10.svg', name: 'Gonzalez Baquero' },
