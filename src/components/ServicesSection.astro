---
// src/components/ServicesSection.astro
import { Icon } from 'astro-icon/components';

// --- ¡MODIFICA ESTA LISTA CON TUS SERVICIOS! ---
// Aquí defines los servicios que aparecerán como tarjetas.
const services = [
  {
    iconName: 'mdi:palette-swatch-variant', // Nombre del icono de https://icon-sets.iconify.design/
    title: 'Diseño de Marca',
    description: 'Creamos identidades visuales memorables que conectan con tu audiencia y reflejan la esencia de tu negocio.'
  },
  {
    iconName: 'mdi:cube-outline',
    title: 'Modelado 3D',
    description: 'Damos vida a tus productos y conceptos con visualizaciones 3D realistas y de alto impacto para catálogos y marketing.'
  },
  {
    iconName: 'mdi:bullhorn-variant-outline',
    title: 'Campañas de Ads',
    description: 'Diseñamos y gestionamos campañas publicitarias en redes sociales y Google para maximizar tu alcance y conversiones.'
  },
  {
    iconName: 'mdi:code-braces',
    title: 'Desarrollo Web',
    description: 'Construimos sitios web rápidos, modernos y optimizados para SEO que ofrecen una experiencia de usuario impecable.'
  },
];
---

<section id="services" class="py-20 sm:py-24 bg-gray-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    
    <!-- Título de la Sección -->
    <div class="text-center">
      <h2 class="font-bebas text-5xl font-bold tracking-tight text-white sm:text-6xl uppercase">
        Nuestros Servicios
      </h2>
      <div class="mt-4 h-1 w-24 bg-amber-400 mx-auto rounded-full"></div>
      <p class="mt-6 text-lg leading-8 text-gray-300 max-w-2xl mx-auto">
        Ofrecemos soluciones integrales para potenciar tu marca en el mundo digital.
      </p>
    </div>

    <!-- Grid con las tarjetas de servicios -->
    <div class="mt-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <div class="bg-slate-800/50 border border-gray-700/50 rounded-2xl p-8 text-center flex flex-col items-center hover:border-amber-400/50 hover:bg-slate-800 transition-all duration-300">
          
          <!-- Contenedor del Icono -->
          <div class="w-16 h-16 bg-slate-900 rounded-full flex items-center justify-center mb-6">
            <Icon name={service.iconName} class="w-8 h-8 text-amber-400" />
          </div>

          <!-- Título del Servicio -->
          <h3 class="font-bold text-xl text-white mb-3">
            {service.title}
          </h3>

          <!-- Descripción del Servicio -->
          <p class="text-gray-400 text-base leading-relaxed">
            {service.description}
          </p>

        </div>
      ))}
    </div>

  </div>
</section>